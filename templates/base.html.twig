{% extends './templates/navBar.html.twig' %}
{% block navBar %}
    <form class="d-flex me-2">
        <input class="form-control me-2" type="search" placeholder="Rechercher un Article" aria-label="Search">
        <button class="btn btn-orange" type="submit">Chercher</button>
    </form>
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <main class="col-md-8">
                {% for key, item in items %}
                    <h2>{{ item.title }}</h2>
                    <p>{{ item.content }}</p>
                    <img src="{{ item.img }}" alt="Image for {{ item.title }}">
                    <p>{{ item.trucs }}</p>
                {% endfor %}
            </main>
            <aside class="col-md-4">
                <div class="sidebar">
                    <h3>Filtres</h3>
                    <ul class="list-group">
                        {% for ingredient in ingredients %}
                            <li class="list-group-item">
                                <input type="checkbox"> {{ ingredient }}
                            </li>
                        {% endfor %}
                    </ul>
                    <button class="btn btn-orange w-100 mt-3">Filter</button>
                </div>
            </aside>
        </div>
    </div>
{% endblock %}
